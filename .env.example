# TTRPG Assistant Environment Configuration Template
# Copy this file to .env and fill in your values

# ================================
# Database Configuration
# ================================

# ChromaDB settings
CHROMADB_PERSIST_DIRECTORY=./chroma_db
CHROMADB_ANONYMIZED_TELEMETRY=false

# ================================
# Search and AI Configuration
# ================================

# Embedding model (default: all-MiniLM-L6-v2)
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32
EMBEDDING_CACHE_ENABLED=true

# Search settings
SEARCH_DEFAULT_MAX_RESULTS=5
SEARCH_SIMILARITY_THRESHOLD=0.7
SEARCH_ENABLE_HYBRID=true
SEARCH_KEYWORD_FALLBACK=true

# ================================
# PDF Processing Configuration
# ================================

# PDF processing limits
PDF_MAX_FILE_SIZE_MB=100
PDF_ENABLE_ADAPTIVE_LEARNING=true
PDF_PATTERN_CACHE_DIR=./pattern_cache
PDF_OCR_ENABLED=false

# ================================
# Server Configuration
# ================================

# MCP Server settings
MCP_SERVER_NAME=ttrpg-assistant
MCP_SERVER_VERSION=2.0.0

# Web UI server settings
WEB_UI_HOST=127.0.0.1
WEB_UI_PORT=8000
WEB_UI_RELOAD=false

# ================================
# Discord Bot Configuration
# ================================

# Discord bot token (keep this secret!)
DISCORD_BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE

# Discord bot settings
DISCORD_COMMAND_PREFIX=!ttrpg
DISCORD_GUILD_ID=YOUR_GUILD_ID_HERE

# ================================
# Development Settings
# ================================

# Environment mode
ENVIRONMENT=development
DEBUG=false

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=ttrpg_assistant.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ================================
# Performance Settings
# ================================

# ChromaDB performance
CHROMADB_THREAD_POOL_SIZE=4
CHROMADB_MAX_BATCH_SIZE=100

# Search performance
SEARCH_CACHE_SIZE=1000
SEARCH_CACHE_TTL=3600

# PDF processing performance
PDF_PROCESSING_WORKERS=2
PDF_PROCESSING_TIMEOUT=300

# ================================
# Security Settings
# ================================

# API security (if implementing authentication)
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File upload security
ALLOWED_FILE_EXTENSIONS=.pdf
MAX_UPLOAD_SIZE_MB=100

# ================================
# Backup and Storage
# ================================

# Backup settings
BACKUP_ENABLED=false
BACKUP_DIRECTORY=./backups
BACKUP_RETENTION_DAYS=30

# Data export settings
EXPORT_DIRECTORY=./exports
CONTENT_PACK_DIRECTORY=./content_packs

# ================================
# Advanced Configuration
# ================================

# Feature flags
FEATURE_DISCORD_BOT=true
FEATURE_WEB_UI=true
FEATURE_ADAPTIVE_LEARNING=true
FEATURE_CONTENT_PACKS=true
FEATURE_MAP_GENERATION=true

# Experimental features (use with caution)
EXPERIMENTAL_FAST_SEARCH=false
EXPERIMENTAL_GPU_ACCELERATION=false
EXPERIMENTAL_DISTRIBUTED_SEARCH=false

# ================================
# Third-party API Keys
# ================================

# OpenAI API (if using for enhanced generation)
# OPENAI_API_KEY=your-openai-key-here

# Anthropic API (if using Claude for generation)
# ANTHROPIC_API_KEY=your-anthropic-key-here

# ================================
# Monitoring and Analytics
# ================================

# Usage analytics (optional)
ANALYTICS_ENABLED=false
ANALYTICS_ENDPOINT=

# Performance monitoring
MONITORING_ENABLED=false
MONITORING_ENDPOINT=

# ================================
# Notes
# ================================

# 1. Never commit this file with real values to version control
# 2. Keep your Discord bot token secure and rotate it regularly
# 3. Use strong, unique secrets for production deployments
# 4. Consider using a secrets management service for production
# 5. Some settings can be overridden in config/config.yaml